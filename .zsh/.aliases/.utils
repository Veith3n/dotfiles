alias asdfnvg='asdf_global neovim'
alias asdfnvl='asdf_local neovim'
alias asdfnvi='asdf_install neovim'

_asdf_installed() {
  asdf list "$1"
}
_asdf_list_all_versions() {
  asdf list all "$1"
}

# Generic asdf commands for global, local, install with fuzzy search
asdf_global() {
  local plugin=$1
  shift
  asdf global "$plugin" $(_asdf_installed "$plugin" | _fuzzy-search "$@")
}

asdf_local() {
  local plugin=$1
  shift
  asdf local "$plugin" $(_asdf_installed "$plugin" | _fuzzy-search "$@")
}

asdf_install() {
  local plugin=$1
  shift
  asdf install "$plugin" "$(_asdf_list_all_versions "$plugin" | _fuzzy-search "$@")"
}

